<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff27bdff"
    android:gravity="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/logo_wallet"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo"
            android:id="@+id/imageView5"
            android:layout_gravity="center"
            android:contentDescription="Logo Company" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transfer"
            android:id="@+id/wallet_tv"
            android:textSize="30dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Log Out"
                android:id="@+id/logOut" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:id="@+id/transfersButton"
        android:layout_below="@+id/logo_wallet"
        android:touchscreenBlocksFocus="false">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/sendButt"
            android:id="@+id/sendButt"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/requestButt"
            android:id="@+id/requestButt"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/transferList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transfersButton"
        android:orientation="vertical" />

</RelativeLayout>